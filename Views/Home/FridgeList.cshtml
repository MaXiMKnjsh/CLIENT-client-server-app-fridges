@using WebApiFridges.CLIENT.MyResponceClasses;
@model List<ResponceFridges>

<h1>Список холодильников</h1>

<h6>
	Вы также можете
	<a href="@Url.Action("CreateFridge", "Home")">
		добавить
	</a>
	или
	<a href="@Url.Action("EditFridge", "Home")">
		отредактировать
	</a>
	список.
</h6>

<table class="center-table">
	<tr>
		<th>Модель</th>
		<th>Год производства</th>
		<th>Название</th>
		<th>Владелец</th>
		<th></th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Model</td>
			<td>@item.Year</td>
			<td>@item.Name</td>
			<td>@item.OwnerName</td>
			<td><a href="">Удалить</a></td>
		</tr>
	}
</table>

